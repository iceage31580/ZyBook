#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    int num1, num2, num3, num4;
    int product_int, average_int;
    double product_double, average_double;

    // Input for the four integers
    cin >> num1 >> num2 >> num3 >> num4;

    // Part 1: Integer arithmetic
    product_int = num1 * num2 * num3 * num4;  // Integer product (may overflow)
    average_int = (num1 + num2 + num3 + num4) / 4;  // Integer average (fraction discarded)

    cout << product_int << " " << average_int << endl;

    // Part 2: Floating-point arithmetic
    product_double = static_cast<double>(num1) * num2 * num3 * num4;  // Floating-point product
    average_double = (num1 + num2 + num3 + num4) / 4.0;  // Floating-point average (fraction retained)

    cout << fixed << setprecision(3);
    cout << product_double << " " << average_double << endl;

    return 0;
}
